@page
@model WebApplication1.Pages.SelectionPageModel
@{
    ViewData["Title"] = "Selection Page";
}

<div class="text-center my-5">
    <h1>Select an Option</h1>

    <div class="button-group">
        <button id="workButton" class="option-button">Work</button>
        <button id="scholarshipButton" class="option-button">Scholarship</button>
        <button id="pensionButton" class="option-button">Pension</button>
    </div>

    <button id="saveButton" class="btn btn-success" style="display:none;">Save Selection</button>
    <input type="file" id="fileInput" accept=".json" style="display:none;" />
    <button id="nextButton" class="btn btn-primary" style="display:none;">Next</button>
</div>

<script>
    let selectedOption = localStorage.getItem('selectedOption');

    function updateSelectedButton() {
        const buttons = document.querySelectorAll('.option-button');
        buttons.forEach(button => {
            button.classList.remove('selected');
            if (button.textContent === selectedOption) {
                button.classList.add('selected');
            }
        });
    }

    document.querySelectorAll('.option-button').forEach(button => {
        button.onclick = function () {
            selectedOption = button.textContent;
            localStorage.setItem('selectedOption', selectedOption);
            updateSelectedButton();
            showSaveButton();
        };
    });

    function showSaveButton() {
        document.getElementById("saveButton").style.display = "block";
        document.getElementById("nextButton").style.display = "block";
    }

    document.getElementById("nextButton").onclick = function () {
        const selectedOption = localStorage.getItem('selectedOption');
        if (!selectedOption) {
            alert("Please select an option before proceeding.");
            return; // Prevent navigation
        }
        window.location.href = 'Subs'; // Navigate to the Subs page
    };

    document.addEventListener("DOMContentLoaded", function () {
        if (selectedOption) {
            updateSelectedButton();
            showSaveButton();
        }
        document.getElementById("fileInput").click();
    });

    document.getElementById("fileInput").onchange = function (event) {
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            const result = JSON.parse(e.target.result);
            selectedOption = result.selected;
            localStorage.setItem('selectedOption', selectedOption);
            updateSelectedButton();
            alert("Loaded selection: " + selectedOption);
        };

        if (file) {
            reader.readAsText(file);
        }
    };

    document.getElementById("saveButton").onclick = function () {
        const data = { selected: selectedOption };
        const json = JSON.stringify(data);
        const blob = new Blob([json], { type: 'application/json' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'data.json';
        link.click();
    };
</script>

<style>
    .text-center {
        text-align: center;
    }

    .button-group {
        margin: 20px 0;
    }

    .option-button {
        padding: 10px 20px;
        margin: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        transition: background-color 0.3s;
    }

        .option-button.selected {
            background-color: #0056b3;
        }

        .option-button:hover {
            background-color: #0056b3;
        }

    #saveButton {
        margin-top: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
    }
</style>
