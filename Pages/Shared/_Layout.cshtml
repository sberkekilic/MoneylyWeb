<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">abc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="user-info d-flex align-items-center" id="user-info" style="display: none;">
                        <span class="user-icon">👤</span>
                        <span class="user-email mx-2"></span>
                        <button class="btn btn-link" id="logout-button">Logout</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Moneyly (Bu proje test aşamasındadır.)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>

        $(document).ready(async function () {
            const response = await fetch('/combined_data.json');
            if (!response.ok) { 
                console.error("Failed to fetch combined.data.json");
                return;
            }
            const combinedData = await response.json();
            const storedEmail = combinedData.Email; // Adjusted to match the JSON structure

            const isLoggedIn = localStorage.getItem("isLoggedIn") === "true";
            const userInfoDiv = document.getElementById("user-info");
            const combinedDataFile = localStorage.getItem("combinedDataFile");

            if (isLoggedIn && combinedDataFile) {
             const currentTime = new Date().getTime();
        const fileTime = new Date(combinedDataFile).getTime();

        if (fileTime > currentTime) {
            window.location.href = "Index";
        }
    }

            if (isLoggedIn && loggedInEmail === storedEmail) {
                // Redirect to HomePage if the user email matches
                const currentPage = window.location.pathname;
                if (currentPage !== '/HomePage') {
                    window.location.href = "/HomePage";
                }
            }

            if (isLoggedIn) {
                const email = localStorage.getItem("email");
                document.querySelector(".user-email").textContent = email;
                userInfoDiv.style.display = "flex";
            } else {
                userInfoDiv.style.display = "none";
            }

            document.getElementById("logout-button").addEventListener("click", async function () {
                console.log("Logout button clicked");

                // Optionally send a logout request to the server to update the JSON file
                const response = await fetch('/api/logout', { method: 'POST' });

                if (response.ok) {
                    console.log("Logout successful");
                    localStorage.setItem("isLoggedIn", "false");
                    localStorage.removeItem("email");
                    localStorage.removeItem("password");
                    // Redirect to Login page
                    window.location.href = "Login";
                } else {
                    console.error("Logout failed:", response.status);
                }
            });


        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
